<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    tools:ignore="contentDescription">

    <ImageView
        android:id="@+id/iv_editor_avatar"
        android:layout_width="@dimen/normal_circle_image_diameter"
        android:layout_height="@dimen/normal_circle_image_diameter"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/ten_dp"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_marginBottom="@dimen/ten_dp"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/tv_editor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_text"
        android:textColor="@android:color/black"
        android:layout_toRightOf="@id/iv_editor_avatar"
        android:layout_marginTop="@dimen/ten_dp"/>
    <TextView
        android:id="@+id/tv_editor_introduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/micro_text"
        android:layout_toRightOf="@id/iv_editor_avatar"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/ten_dp"
        android:maxLines="1"
        android:ellipsize="end"/>
</RelativeLayout>